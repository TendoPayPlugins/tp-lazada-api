{
    "name": "tendopay/tp-lazada-api",
    "description": "TP Lazada API Integration",
    "keywords": [
        "tendopay",
        "tp-lazada-api"
    ],
    "homepage": "https://github.com/CandyDigitalCo/tp-lazada-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Szymon Sterczewski",
            "email": "szymon@tendopay.ph",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "TendoPay\\LazadaApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TendoPay\\LazadaApi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
